const int trigPin = 9;
const int echoPin = 8;
long duration;
int distance;


void setup() {
pinMode(trigPin, OUTPUT);
pinMode(echoPin, INPUT); 
pinMode(2, OUTPUT); //RED
pinMode(3, OUTPUT); //YELLOW
pinMode(4, OUTPUT); //GREEN

Serial.begin(9600);
}
void loop() {
digitalWrite(trigPin, LOW);
delayMicroseconds(2);
digitalWrite(trigPin, HIGH);
delayMicroseconds(10);
digitalWrite(trigPin, LOW);
  duration = pulseIn(echoPin, HIGH);
  distance= duration*0.034/2;
Serial.print("Distance: ");
Serial.println(distance);
  
if (distance < 50) //change the distance here for the red light to activate 
 { //RED LIGHT
  digitalWrite(2,HIGH);
  digitalWrite(3,LOW);
  digitalWrite(4,LOW);
 }
else if (distance > 50 && distance < 100) //change the distance here for the yellow light to activate 
 { //YELLOW LIGHT
  digitalWrite(2,LOW);
  digitalWrite(3,HIGH);
  digitalWrite(4,LOW);
 }
else if (distance > 100 && distance < 200) //change the distance here for the green light to activate 
 { //GREEN LIGHT
  digitalWrite(2,LOW);
  digitalWrite(3,LOW);
  digitalWrite(4,HIGH);
 }
else
 {
  digitalWrite(2,LOW);
  digitalWrite(3,LOW);
  digitalWrite(4,LOW);
 }
}
